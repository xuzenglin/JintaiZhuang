<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chris.lanfeng.data.mapper.UserMapper">
    <resultMap id="user" type="User">
        <id property="userId" column="user_id"/>
        <result property="nickName" column="nick_name"/>
        <result property="phone" column="phone"/>
        <result property="userType" column="user_type"/>
        <result property="password" column="password"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <sql id="Base_Column_List">
        user_id,nick_name,phone,user_type,password,create_time
    </sql>

    <insert id="insert" parameterType="User" useGeneratedKeys="true" keyProperty="userId">
         INSERT INTO
          t_user(user_id, nick_name, phone, user_type, password, create_time)
        VALUE
          (#{userId}, #{nickName}, #{phone}, #{userType}, #{password},now())
    </insert>

    <select id="getByUserId" resultMap="user">
        SELECT
        <include refid="Base_Column_List"></include>
        FROM t_user
        WHERE user_id=#{userId}
    </select>

    <select id="getByPhone" resultMap="user">
        SELECT
        <include refid="Base_Column_List"></include>
        FROM t_user
        WHERE phone=#{phone}
    </select>

    <select id="getByNickName" resultMap="user">
        SELECT
        <include refid="Base_Column_List"></include>
        FROM t_user
        WHERE nick_name=#{nickName}
    </select>

</mapper>